{
    "name": "T.M.M. Quote Replacer",
    "description": "Replaces any text on a webpage that is surrounded by quotes with a random T.M.M. lyric!",
    "version": "0.1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "quote_replacer.js"
            ],
            "all_frames": true,
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://*/*"
            ],
            "resources": [
                "lyrics.json"
            ]
        }
    ],
    "icons": {
        "16": "icons/tmm_logo16.png",
        "32": "icons/tmm_logo32.png",
        "48": "icons/tmm_logo48.png",
        "128": "icons/tmm_logo128.png"
    }
}